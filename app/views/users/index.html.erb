<div class="body">
	<div class="container">
		<%= render 'books/templete2', book: @book %>
			</div>
			<div class="index-book col-xs-9">
				<h2>Books</h2>
					<table class="table">
						<thead>
							<tr>
								<th>image</th>
								<th>name</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% @users.each do |user| %>
							<tr>
								<td>
								  <%= attachment_image_tag user, :profile_image, size: "40x40", fallback: "no_image.jpg", class: " pull-left profile-thumb" %>
								</td>
								<td>
								  <%= user.name %>
								</td>
								<td>
								  <%= link_to "Show", user_path(user.id) %>
								</td>
							</tr>
							<% end %>
						</tbody>
					</table>
			</div>
		</div>
	</div>
</div>
